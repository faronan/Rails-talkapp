<h1>会話アプリ</h1>

<% if user_signed_in? %> 
  <h2> ようこそ <%= current_user.name %> さん </h2>
    <% if current_user.rooms.any? %>
      <ol class="rooms">
        <%= render @rooms %>
      </ol>
    <% end %>
    <%= link_to "友達を探す", user_get_path, class: 'post' %>
    <%= link_to "グループを作る", rooms_new_path, class: 'post' %>
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
<% else %>
  <h2> 現在ログインしていません </h2>
  <%= link_to "ログイン", new_user_session_path, class: 'post' %>
  <%= link_to "新規登録", new_user_registration_path, class: 'post' %>
<% end %>